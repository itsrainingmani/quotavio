root = true

[*]
charset = utf-8
indent_size = 2
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

# The JSON files contain newlines inconsistently
[{*.json,*.yml}]
indent_style = tab
insert_final_newline = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.md]
indent_style = tab
trim_trailing_whitespace = false